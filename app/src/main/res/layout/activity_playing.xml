<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewmodel" type="com.example.music.viewmodel.PlayVM"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.PlayingActivity">

        <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                background_utl="@{viewmodel.song.coverUrl}"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:background="#00FFFFFF"
                    app:title=" ">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                >
                    <TextView
                            android:id="@+id/tv_songname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewmodel.song.songName}"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="17sp"/>
                    <TextView
                            android:id="@+id/tv_singername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewmodel.song.singerName}"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="9">

                <com.example.music.customveiw.RotationCircleView
                        android:id="@+id/iv_song_cover"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_gravity="center"
                        song="@{viewmodel.song}"
                        app:hasbox="true"
                        app:boxwidth="5dp"
                        app:boxcolor="#CF7C89"
                />

                <!--&lt;!&ndash;歌词&ndash;&gt;-->
                <com.example.music.customveiw.LrcView
                        android:id="@+id/lrcview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        text="@{viewmodel.lrc}"
                        android:visibility="gone"
                />
            </FrameLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_above="@id/ll_process"
                          android:layout_marginBottom="15dp"
                          android:orientation="horizontal"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp">
                <ImageView android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="20dp"
                           android:src="@drawable/vector_drawable_collect_white"
                           android:layout_gravity="center"/>
                <ImageView android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="20dp"
                           android:src="@drawable/vector_drawable_download_white"/>

                <!--添加到我喜欢的音乐-->
                <ImageView
                        android:id="@+id/iv_my_love"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:src="@drawable/vector_drawable_comment"/>

            </LinearLayout>


            <!--歌曲进度部分-->
            <LinearLayout
                    android:id="@+id/ll_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center_vertical"
                    android:layout_above="@id/ll_control"
                    android:layout_marginBottom="20dp"
            >
                <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="@color/white"/>
                <SeekBar
                        android:id="@+id/seek_bar"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="8sp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/ll_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="30dp"
            >

                <ImageView
                        android:id="@+id/iv_mode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:onClick="@{()->viewmodel.changeMode()}"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_move_back"
                        android:onClick="@{()->viewmodel.playPrevious()}"/>
                <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_play_running"
                        id="@{viewmodel.playIc}"

                        android:onClick="@{()->viewmodel.pause()}"/>
                <ImageView android:layout_width="0dp"
                           android:layout_weight="2"
                           android:padding="5dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_move_forward"
                           android:onClick="@{()->viewmodel.playNext()}"
                />
                <ImageView android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="40dp"
                           android:padding="8dp"
                           android:src="@drawable/vector_drawable_playlist"/>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>