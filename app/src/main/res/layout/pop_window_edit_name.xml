<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/pop_window_background">
    <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="换一个炫酷的名字"
            android:textColor="#515151"
            android:textStyle="bold"
            android:textSize="17sp"/>
    <com.example.music.customveiw.MyEditView
            android:id="@+id/et_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="昵称"
            android:textCursorDrawable="@null"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_pop_title"
            android:padding="10dp"
            android:maxLength="15"
            android:drawableRight="@drawable/vector_drawable_edittext_clean"/>
    <TextView
            android:id="@+id/bt_sure_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:padding="10dp"
            android:layout_below="@id/et_change_name"
            android:background="@drawable/item_pressed"
            android:textColor="@color/yellow"
    />
    <TextView
            android:id="@+id/bt_save_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:padding="10dp"
            android:background="@drawable/item_pressed"
            android:textColor="#A6A6A6"
            android:layout_alignTop="@id/bt_sure_save"
            android:layout_toRightOf="@id/bt_sure_save"
            android:layout_marginLeft="30dp"/>



        </RelativeLayout>