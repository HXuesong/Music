<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

    <!--歌曲图片-->
    <ImageView
            android:id="@+id/notifi_music_cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_music"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

        <!--歌曲名-->
        <TextView
                android:id="@+id/notifi_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                />
        <!--歌手名-->
        <TextView
                android:id="@+id/notifi_music_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/deepGray"
                />

        <!--控制台-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">
            <ImageView
                    android:id="@+id/notifi_play_pre"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_play_pre"
                    android:background="@drawable/item_pressed"/>

            <ImageView
                    android:id="@+id/notifi_play_or_pause"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pause_notifi"
                    android:background="@drawable/item_pressed"/>
            <ImageView
                    android:id="@+id/notifi_play_next"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_play_next"
                    android:background="@drawable/item_pressed"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>