<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pop_window_background">
    <com.example.music.customveiw.MyEditView
        android:id="@+id/et_change_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_background_gray"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:maxLength="10"
        android:drawableRight="@drawable/vector_drawable_edittext_clean"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/bt_sure_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:background="@drawable/button_backgroundl_yellow_small_radio"
            android:textColor="#FF7F27"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/bt_save_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/edit_background_gray"
            android:textColor="#A6A6A6"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>