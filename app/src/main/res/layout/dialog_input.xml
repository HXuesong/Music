<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/pop_window_background">
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新建歌单"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    <com.example.music.view.customveiw.MyEditView
            android:id="@+id/et_songlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:maxLength="20"
            android:hint="输入歌单标题"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:drawableRight="@drawable/vector_drawable_edittext_clean"/>

    <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="确认"
            android:layout_below="@id/et_songlist_name"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_pressed"/>

    <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="取消"
            android:textSize="15sp"
            android:layout_alignTop="@id/tv_ok"
            android:layout_toRightOf="@id/tv_ok"
            android:layout_marginLeft="30dp"
            android:background="@drawable/item_pressed"/>
</RelativeLayout>